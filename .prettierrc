{
  "parser": "typescript",
  "printWidth": 120,
  "singleQuote": true,
  "trailingComma": "all",
  "useTabs": false,
  "tabWidth": 2,
  "semi": true,
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "jsxSingleQuote": true,
  "proseWrap": "never",
  "insertPragma": false,
  "arrowParens": "always",
  "overrides": [
    {
      "files": ["reducers.js"],
      "options": {
        "printWidth": 1200
      }
    },
    {
      "files": "*.json",
      "options": {
        "printWidth": 200
      }
    }
  ]
}
